<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <title>Chat com socket.io</title>
</head>
<style>
    #chat{
        max-height: 500px;
        min-height: 500px;
        background-color: aliceblue;
        overflow-y: scroll;
    }
</style>
<body>
    <h1>Chat</h1>
    <div id="chat">

    </div><br>
    <input type="text" name="" id="msg" class="form-control" placeholder="Digite sua mensagem"><br>
    <input type="text" name="" id="username" placeholder="Seu nome de usuÃ¡rio" class="form-control"><br>
    <button onclick="enviar()" class="btn btn-primary">Enviar</button>
</body>
<script src="https://cdn.socket.io/4.7.2/socket.io.min.js" integrity="sha384-mZLF4UVrpi/QTWPA7BjNPEnkIfRFn4ZEO3Qt/HFklTJBj/gBOV8G3HcKn4NfQblz" crossorigin="anonymous"></script>
<script>
    let socket = io("http://localhost:3000")

    socket.on("disconnect", () => {
        console.log("Desconectado")
    })

    socket.on("showmsg", (data) => {
        console.log(data)
        let chat = document.getElementById("chat")
        let p = document.createElement("p")
        p.innerHTML = data.username + ": " + data.msg
        chat.append(p)
    })
    
    function enviar(){
        let msgField = document.getElementById("msg")
        let usernameField = document.getElementById("username")

        let msg = msgField.value
        let username = usernameField.value

        socket.emit("msg", {msg: msg, username: username})
    }
</script>
</html>